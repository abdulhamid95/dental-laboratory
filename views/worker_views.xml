<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="crm_worker_form_view" model="ir.ui.view">
      <field name="model">crm.worker</field>
      <field name="name">crm.crm_worker_form_view</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name" />
          </group>
        </form>
      </field>
    </record>
    <record id="crm_worker_tree_view" model="ir.ui.view">
      <field name="model">crm.worker</field>
      <field name="name">crm.crm_worker_tree_view</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name" />
        </tree>
      </field>
    </record>
    <record id="crm_worker_action" model="ir.actions.act_window">
      <field name="name">ALl Designer</field>
      <field name="res_model">crm.worker</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
                No Designer Data
        </p><p>
      You don't add any worker, You can add by click button New
      </p>
      </field>
    </record>

