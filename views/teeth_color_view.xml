<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="crm_color_form_view" model="ir.ui.view">
      <field name="model">crm.color</field>
      <field name="name">crm.crm_color_form_view</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name" />
          </group>
        </form>
      </field>
    </record>
    <record id="teeth_color_tree_view" model="ir.ui.view">
      <field name="model">crm.color</field>
      <field name="name">crm.crm_color_tree_view</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name" />
        </tree>
      </field>
    </record>
    <record id="crm_color_action" model="ir.actions.act_window">
      <field name="name">ALl Colors</field>
      <field name="res_model">crm.color</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
                No Color Data
        </p><p>
      You don't add any color number, You can add by click button New
      </p>
      </field>
    </record>

